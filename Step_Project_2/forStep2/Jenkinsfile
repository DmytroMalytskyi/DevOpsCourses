pipeline {
    agent {
        label 'worker'
    }

    environment {
        IMAGE_NAME = 'dmytrro/test-nodejs-app'
        DOCKER_CREDENTIALS_ID = 'dockerhub-creds'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/DmytroMalytskyi/DevOpsCourses.git'
            }
        }

        stage('Change Directory to Project') {
            steps {
                dir('Step_Project_2/forStep2') {
                    script {
                        env.WORKDIR = pwd()
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${env.WORKDIR}") {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Run Tests in Container') {
            steps {
                dir("${env.WORKDIR}") {
                    script {
                        def result = sh(script: 'docker run --rm $IMAGE_NAME npm test', returnStatus: true)
                        if (result != 0) {
                            error("Tests failed")
                        }
                    }
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIALS_ID, usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push $IMAGE_NAME'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
