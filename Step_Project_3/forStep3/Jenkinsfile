
pipeline {
  agent any
  environment {
    DOCKERHUB = credentials('dockerhub')   // Jenkins credential ID
    IMAGE = "fcfstov/test-nodejs-app"
  }

  stages {
    stage('Checkout') {
      steps {
        echo "üì¶ Cloning repository..."
        checkout scm
        sh 'ls -la Step_Project_3/forStep3'  // Debug: –ø–µ—Ä–µ–∫–æ–Ω–∞–π—Å—è, —â–æ –ø–∞–ø–∫–∞ —î
      }
    }

    stage('Build') {
      steps {
        echo "üèóÔ∏è Building Docker image..."
        sh '''
          docker build -t $IMAGE:${BUILD_NUMBER} -t $IMAGE:latest ./Step_Project_3/forStep3
        '''
      }
    }

    stage('Test') {
      steps {
        echo "üß™ Running tests..."
        sh '''
          docker run --rm $IMAGE:${BUILD_NUMBER} npm test || true
        '''
      }
    }

    stage('Push') {
      steps {
        echo "üì§ Pushing image to DockerHub..."
        sh '''
          echo "$DOCKERHUB_PSW" | docker login -u "$DOCKERHUB_USR" --password-stdin
          docker push $IMAGE:${BUILD_NUMBER}
          docker push $IMAGE:latest
        '''
      }
    }

    stage('Deploy on worker') {
      agent { label 'worker' }
      steps {
        echo "üöÄ Deploying on worker..."
        sh '''
          docker rm -f app || true
          docker pull $IMAGE:latest
          docker run -d --name app -p 3000:3000 $IMAGE:latest
        '''
      }
    }
  }

  post {
    success {
      echo "‚úÖ Deployment successful!"
    }
    failure {
      echo "‚ùå Build failed! Check logs."
    }
  }
}

