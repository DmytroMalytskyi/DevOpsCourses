
pipeline {
  agent any
  environment {
    DOCKERHUB = credentials('dockerhub')
    IMAGE = "fcfstov/test-nodejs-app"
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
        sh 'docker build -t $IMAGE:${BUILD_NUMBER} -t $IMAGE:latest ./forStep3'
      }
    }
    stage('Test') {
      steps {
        sh 'docker run --rm $IMAGE:${BUILD_NUMBER} npm test || true'
      }
    }
    stage('Push') {
      steps {
        sh 'echo "$DOCKERHUB_PSW" | docker login -u "$DOCKERHUB_USR" --password-stdin'
        sh 'docker push $IMAGE:${BUILD_NUMBER}'
        sh 'docker push $IMAGE:latest'
      }
    }
    stage('Deploy on worker') {
      agent { label 'worker' }
      steps {
        sh '''
          docker rm -f app || true
          docker pull $IMAGE:latest
          docker run -d --name app -p 3000:3000 $IMAGE:latest
        '''
      }
    }
  }
}
